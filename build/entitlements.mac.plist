<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow the app to run unsigned -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Allow the app to disable library validation -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Allow the app to access files outside of its sandbox -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Allow the app to access network -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Allow the app to access network server -->
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- Allow the app to access camera (for face detection) -->
    <key>com.apple.security.device.camera</key>
    <true/>
    
    <!-- Allow the app to access microphone (for video processing) -->
    <key>com.apple.security.device.microphone</key>
    <true/>
</dict>
</plist>
